import insightconnect_plugin_runtime
from icon_ip_list_manager import connection, actions, triggers


Name = "IP List Manager"
Vendor = "rapid7"
Version = "1.0.0"
Description = "Manage whitelists or blacklists of IPs"


class ICONIpListManager(insightconnect_plugin_runtime.Plugin):
    def __init__(self):
        super(self.__class__, self).__init__(
                name=Name, 
                vendor=Vendor, 
                version=Version,
                description=Description,
                connection=connection.Connection()
                )
        self.add_action(actions.AddIpToList())

        self.add_action(actions.CheckIfIpIsInList())

        self.add_action(actions.ClearIpList())

        self.add_action(actions.GetIpList())

        self.add_action(actions.RemoveIpFromList())


def main():
    """Run plugin"""
    cli = insightconnect_plugin_runtime.CLI(ICONIpListManager())
    cli.run()


if __name__ == "__main__":
    main()
